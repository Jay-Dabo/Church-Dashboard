<%= form_for(@campus, remote: send_remote) do |f| %>

<fieldset>
	<%= f.label :name %>
	<%= f.text_field :name %><br />
	<%= f.label :address1 %>
	<%= f.text_field :address1 %><br />
	<%= f.label :address2 %>
	<%= f.text_field :address2 %><br />
	<%= f.label :city %>
	<%= f.text_field :city %><br />
	<%= f.label :state %>
	<%= f.text_field :state %><br />
	<%= f.label :postal_code %>
	<%= f.text_field :postal_code %><br />
	<%= f.label :country %>
	<%= f.country_select :country, ["US", "GB"], iso_codes: true %><br />
	<%= f.label :phone %>
	<%= f.telephone_field :phone %><br />

	<%= f.fields_for :room do |b| %>
		<fieldset>
			<%= b.label :name, "Room Name" %>
			<%= b.text_field :name %><br />
			<%= b.label :description %>
			<%= b.text_area :description %><br />
			<%= b.label :capacity %>
			<%= b.number_field :capacity, value: 0, min: 0 %><br />
		</fieldset>
	<% end %>
	

	<%= f.submit %> 
</fieldset>
<% end %>