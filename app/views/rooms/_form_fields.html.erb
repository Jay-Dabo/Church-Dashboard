<%= f.label :name, "Room Name" %>
<%= f.text_field :name %><br />

<%= f.label :description %>
<%= f.text_area :description %><br />

<%= f.label :capacity %>
<%= f.number_field :capacity, min: 0 %><br />

<% if @room %>
<%= f.label :campus %>
<%= f.select :campus_id, @campuses.collect {|c| [c.name, c.id]}, {include_blank: true} %><br />
<% end %> 