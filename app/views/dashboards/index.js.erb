$(function() {
  $('#chart-ytd-attendance').highcharts({
      credits: {
            enabled: false
      },
      chart: {
        type: 'area'
      },
      title: {
          text: '<%= j @chart_title %>',
          x: -20 //center
      },
      subtitle: {
          text: '<%= j @chart_subtitle %>',
          x: -20
      },
      xAxis: {
          categories:['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
      },
      yAxis: {
          title: {
              text: 'Attendance'
          },
          plotLines: [{
              value: 0,
              width: 1,
              color: '#808080'
          }]
      },
      tooltip: {
          valueSuffix: ' attendees'
      },

      legend: {
          layout: 'horizontal',
          align: 'center',
          verticalAlign: 'bottom',
          borderWidth: 0
      },
      series: [
        <% @events.each do |key, value|  %>
        {
          name: '<%= key %>',
          data: <%= value %>
        },
        <% end %>
      ]
  });
});   